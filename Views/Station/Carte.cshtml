@model List<BikeStation>
@{
    ViewData["Title"] = "Carte";
}

@section Stylesheets {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.3.1/dist/leaflet.css" integrity="sha512-Rksm5RenBEKSKFjgI3a41vrjkw4EVPlJ3+OiI65vTjIdo9brlAacEuKOiQ5OFh7cOI1bkDwLqdLw3Zg0cRJAAQ==" crossorigin="" />
    <style type="text/css">
        #map {
            height: 800px;
        }
    </style>
}

<div id="map"></div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.3.1/dist/leaflet.js" integrity="sha512-/Nsx9X4HebavoBvEBuyp3I7od5tA0UzAxs+j83KgC8PU0kgB4XiK4Lfe4y4cgBtaRJQEIFCW+oC506aPT2L1zw==" crossorigin=""></script>
    <script type="text/javascript">
        var lat = 44.837861;
        var lon = -0.5796051;
        var macarte = null;
        var stations = {
            @foreach (var station in Model)
            {
                <text>
                    "@station.Name": { "lat": @station.Latitude, "lon": @station.Longitude, "label": "@Html.Raw(String.Format("{0}<br /> Nombre vélo(s) :  {1} <br /> Nombre place(s) : {2}", station.Name,station.BikeCountTotal, station.SlotCount))" },
                </text>
            }
        };
        function initMap() {
            macarte = L.map('map').setView([lat, lon], 15);
            L.tileLayer('https://{s}.tile.openstreetmap.fr/osmfr/{z}/{x}/{y}.png', {
                attribution: 'données © OpenStreetMap/ODbL - rendu OSM France',
                minZoom: 1,
                maxZoom: 20
            }).addTo(macarte);
            for (station in stations) {
                var marker = L.marker([stations[station].lat, stations[station].lon]).addTo(macarte);
                marker.bindPopup(stations[station].label);
            }
        }
        window.onload = function () {
            initMap();
        };
    </script>

}